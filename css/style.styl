html, body
  background-image url(../media/grid.gif)

#app
  font-family 'Times New Roman', serif
  font-size xx-large
  font-weight bold
  text-align center
  padding-top 2%
  h1, h2, h3
    margin-bottom 0
    font-weight bold
    color #000075
    a
      color #000075

[v-cloak]
  display none

.size0
  font-size xx-large
.size1
  font-size x-large
.size2
  font-size xxx-large

.color0
  color #000
.color1
  color #000075
.color2
  color red
.color3
  color #c00
.color4
  color #900
.color5
  color #090
.color6
  color #060
.color7
  color #33f
.color8
  color #333

.style0
  font-style normal
.style1
  font-style italic
